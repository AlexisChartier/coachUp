<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.util.Callback?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coachup.controller.UserListController">
    <children>
        <TableView fx:id="userTableView" prefHeight="200.0" prefWidth="300.0">
            <columns>
                <TableColumn text="Nom">
                    <cellValueFactory>
                        <javafx.scene.control.cell.PropertyValueFactory property="nom" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Détail">
                    <cellFactory>
                        <javafx.util.Callback type="javafx.scene.control.TableCell" fx:factory="forTableColumn">
                            <Button text="Détail" onAction="#showUserDetail" />
                        </javafx.util.Callback>
                    </cellFactory>
                </TableColumn>
                <TableColumn text="Supprimer">
                    <cellFactory>
                        <javafx.util.Callback type="javafx.scene.control.TableCell" fx:factory="forTableColumn">
                            <Button text="Supprimer" onAction="#deleteUser" />
                        </javafx.util.Callback>
                    </cellFactory>
                </TableColumn>
            </columns>
        </TableView>
    </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coachup.controller.ModificationCategorieController">
    <stylesheets>
        <URL value="@/css/application.css" />
    </stylesheets>
    <children>
        <VBox alignment="CENTER" prefHeight="200" prefWidth="300" spacing="10">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Modification de Catégorie" />
            <Label text="Nom Catégorie:" />
            <TextField fx:id="nomField" />
            <Label text="Description Catégorie:" />
            <TextField fx:id="descriptionField" />
            <Button onAction="#handleModifierButton" text="Modifier" />
            <Button onAction="#handleReturnButton" text="Retour" />
        </VBox>
    </children>
</AnchorPane>

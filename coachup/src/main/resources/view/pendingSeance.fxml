<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coachup.controller.PendingSeanceDetailController">
    <children>
        <VBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 30px; -fx-font-weight: bold;" text="Facturation" />
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Récapitulatif de la séance" />

            <Label fx:id="categorieLabel" />
            <Label fx:id="dateLabel" />
            <Label fx:id="coachLabel" />

            <Button onAction="#handleReturnButton" text="Abandonner" />
            <Button onAction="#handlePayButton" text="Paiement sécurisé"/>

        </VBox>
    </children>
</AnchorPane>

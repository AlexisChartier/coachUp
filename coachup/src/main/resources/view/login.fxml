<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="center" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coachup.controller.LoginController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Login Page"/>
    <Label text="Username:"/>
    <TextField fx:id="usernameField"/>
    <Label text="Password:"/>
    <PasswordField fx:id="passwordField"/>
    <Button text="Login" onAction="#loginButtonAction"/>
    <Button text="Register as a student" onAction="#registerStudentButtonAction"/> <!-- Ajout du bouton Register -->
    <Button text="Register as a coach" onAction="#registerCoachButtonAction"/>
    <Button text="Quit" onAction="#quitButtonAction"/>
</VBox>

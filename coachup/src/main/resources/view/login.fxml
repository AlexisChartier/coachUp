<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<VBox spacing="10" alignment="center" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coachup.controller.LoginController">
    <stylesheets>
        <URL value="@/css/application.css" />
    </stylesheets>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Connexion "/>
    <Label text="Pseudo :"/>
    <TextField fx:id="usernameField"/>
    <Label text="Mot de passe:"/>
    <PasswordField fx:id="passwordField"/>
    <Button text="Se connecter" onAction="#loginButtonAction"/>
    <Button text="S'enregistrer en tant qu'élève" onAction="#registerStudentButtonAction"/> <!-- Ajout du bouton Register -->
    <Button text="S'enregistrer en tant que coach" onAction="#registerCoachButtonAction"/>
    <Button text="Quitter" onAction="#quitButtonAction"/>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coachup.controller.UserCellController">
    <padding>
        <Insets bottom="5" left="5" right="5" top="5" />
    </padding>

    <!-- Icone générique (remplacez le chemin d'accès à l'icône appropriée) -->
    <ImageView cache="true" fitHeight="50.0" fitWidth="50.0" preserveRatio="true" fx:id="image">
        <image>
            <Image url="@../img/utilisateur.png" />
        </image>
    </ImageView>

    <!-- Nom de l'utilisateur -->
    <Text fx:id="userNameText" />

    <!-- Bouton détail -->
    <Button onAction="#detailButtonAction" text="Détail" fx:id="detailButton"/>

    <!-- Bouton supprimer -->
    <Button onAction="#deleteButtonAction" text="Supprimer" fx:id="deleteButton"/>
</HBox>
